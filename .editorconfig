# EditorConfig 配置文件
# 用于统一不同编辑器的代码风格
# 详情: https://editorconfig.org

# 根配置文件
root = true

# ============================================
# 默认配置（适用于所有文件）
# ============================================
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# ============================================
# Windows 脚本文件（使用 CRLF）
# ============================================
[scripts/windows/**/*.bat]
end_of_line = crlf

[scripts/windows/**/*.ps1]
end_of_line = crlf

[scripts/windows/**/*.cmd]
end_of_line = crlf

# ============================================
# Linux/Unix 脚本文件（使用 LF）
# ============================================
[scripts/linux/**/*.sh]
end_of_line = lf

[scripts/common.sh]
end_of_line = lf

[dotfiles/**/*.sh]
end_of_line = lf

# ============================================
# 其他 Shell 脚本（使用 LF）
# ============================================
[*.sh]
end_of_line = lf

# ============================================
# 配置文件（使用 LF）
# ============================================
[*.{json,toml,yaml,yml,conf,config,ini}]
end_of_line = lf

# ============================================
# 代码文件（使用 LF）
# ============================================
[*.{c,cpp,h,hpp,py,lua,rs,go,java,js,ts,tsx}]
end_of_line = lf

# ============================================
# 文档文件（使用 LF）
# ============================================
[*.{md,txt,readme}]
end_of_line = lf

# ============================================
# Markdown 文件特殊配置
# ============================================
[*.md]
trim_trailing_whitespace = false

