{{- if or (eq .chezmoi.os "linux") (eq .chezmoi.os "darwin") -}}
#!/bin/bash

# ============================================
# Tmux 安装脚本（chezmoi run_once_）
# 支持 Linux/macOS
# ============================================

# 获取 common_install.sh 路径
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/../.." && pwd 2>/dev/null || echo "$HOME")"
COMMON_INSTALL="${PROJECT_ROOT}/scripts/chezmoi/common_install.sh"

if [ ! -f "$COMMON_INSTALL" ]; then
    COMMON_INSTALL="$HOME/.local/share/chezmoi/scripts/chezmoi/common_install.sh"
fi

# 加载通用函数库
if [ -f "$COMMON_INSTALL" ]; then
    source "$COMMON_INSTALL"
else
    echo "[WARNING] 未找到 common_install.sh，使用基本函数"
    function setup_proxy() { :; }
    function detect_os_and_package_manager() {
        OS="$(uname -s)"
        if [[ "$OS" == "Darwin" ]]; then
            PLATFORM="macos"
            PACKAGE_MANAGER="brew"
        elif [[ "$OS" == "Linux" ]]; then
            PLATFORM="linux"
            if command -v pacman &> /dev/null; then
                PACKAGE_MANAGER="pacman"
            elif command -v apt-get &> /dev/null; then
                PACKAGE_MANAGER="apt"
            fi
        fi
    }
    function install_package() {
        local pkg="$1"
        if [[ "$PACKAGE_MANAGER" == "brew" ]]; then
            brew install "$pkg"
        elif [[ "$PACKAGE_MANAGER" == "pacman" ]]; then
            sudo pacman -S --noconfirm "$pkg"
        elif [[ "$PACKAGE_MANAGER" == "apt" ]]; then
            sudo apt-get update && sudo apt-get install -y "$pkg"
        fi
    }
fi

# 设置代理（优先使用环境变量，否则使用默认值）
# 注意：直接执行模板时可能无法访问 .data.proxy，所以使用环境变量
PROXY_VALUE="${PROXY:-${http_proxy:-${HTTP_PROXY:-http://127.0.0.1:7890}}}"
setup_proxy "$PROXY_VALUE"

# 检测操作系统和包管理器
detect_os_and_package_manager || exit 1

# 检查 Tmux 是否已安装
if command -v tmux &> /dev/null; then
    echo "[INFO] Tmux 已安装: $(tmux -V)"
    exit 0
fi

echo "[INFO] 开始安装 Tmux..."

# 根据平台安装 Tmux
case "$PLATFORM" in
    macos)
        if [[ "$PACKAGE_MANAGER" == "brew" ]]; then
            install_package "tmux"
        else
            echo "[ERROR] macOS 需要 Homebrew 来安装 Tmux"
            exit 1
        fi
        ;;
    linux)
        install_package "tmux"
        ;;
    *)
        echo "[ERROR] 不支持的操作系统"
        exit 1
        ;;
esac

if command -v tmux &> /dev/null; then
    echo "[SUCCESS] Tmux 安装成功: $(tmux -V)"
else
    echo "[ERROR] Tmux 安装失败"
    exit 1
fi

# ============================================
# 安装 TPM (Tmux Plugin Manager)
# ============================================
TPM_DIR="$HOME/.tmux/plugins/tpm"

# 检查 TPM 是否已安装
if [ -d "$TPM_DIR" ] && [ -f "${TPM_DIR}/tpm" ]; then
    echo "[INFO] TPM (Tmux Plugin Manager) 已安装"
else
    echo "[INFO] 开始安装 TPM (Tmux Plugin Manager)..."

    # 创建目录
    mkdir -p "$TPM_DIR"

    # 检测是否为远端 Arch Linux 环境，使用代理下载
    REMOTE_PROXY="http://192.168.1.76:7890"
    USE_PROXY=false

    # 检查是否在远端环境（通过检查主机名、IP 或环境变量）
    HOSTNAME=$(hostname 2>/dev/null || echo '')
    HOST_IP=$(hostname -I 2>/dev/null | awk '{print $1}' || echo '')

    # 如果主机名包含 arch 或 IP 是 192.168.1.109，认为是远端环境
    if [[ "$HOSTNAME" == *"arch"* ]] || [[ "$HOST_IP" == "192.168.1.109" ]] || [[ "$HOSTNAME" == "192.168.1.109" ]]; then
        USE_PROXY=true
        echo "[INFO] 检测到远端 Arch Linux 环境，将使用代理: $REMOTE_PROXY"
    fi

    # 如果环境变量已设置代理，也使用代理
    if [ -n "${http_proxy:-}" ] || [ -n "${HTTP_PROXY:-}" ]; then
        USE_PROXY=true
        REMOTE_PROXY="${http_proxy:-${HTTP_PROXY:-$REMOTE_PROXY}}"
        echo "[INFO] 使用环境变量中的代理: $REMOTE_PROXY"
    fi

    # 设置代理环境变量（如果需要）
    if [ "$USE_PROXY" = true ]; then
        export http_proxy="$REMOTE_PROXY"
        export https_proxy="$REMOTE_PROXY"
        export HTTP_PROXY="$REMOTE_PROXY"
        export HTTPS_PROXY="$REMOTE_PROXY"
        # 配置 git 使用代理
        git config --global http.proxy "$REMOTE_PROXY" 2>/dev/null || true
        git config --global https.proxy "$REMOTE_PROXY" 2>/dev/null || true
    fi

    # 克隆 TPM 仓库
    if git clone https://github.com/tmux-plugins/tpm "$TPM_DIR" 2>&1; then
        echo "[SUCCESS] TPM (Tmux Plugin Manager) 安装成功"
        echo "[INFO] 所有 tmux 插件将通过 TPM 管理，请在 tmux 中按 prefix + I 安装插件"

        # 清理 git 代理配置（如果之前设置了）
        if [ "$USE_PROXY" = true ]; then
            git config --global --unset http.proxy 2>/dev/null || true
            git config --global --unset https.proxy 2>/dev/null || true
        fi
    else
        echo "[ERROR] TPM (Tmux Plugin Manager) 安装失败"
        # 清理 git 代理配置
        if [ "$USE_PROXY" = true ]; then
            git config --global --unset http.proxy 2>/dev/null || true
            git config --global --unset https.proxy 2>/dev/null || true
        fi
        exit 1
    fi
fi
{{- end -}}

